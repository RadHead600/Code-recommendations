using System.Collections;
using System.Collections.Generic;
using UnityEngine;

[RequireComponent(typeof(AudioSource))]
public class AudioManager : MonoBehaviour
{
    private AudioSource _audioSource;
    private Coroutine coroutine;

    private void Start()
    {
        _audioSource = GetComponent<AudioSource>();
        _audioSource.volume = 0f;
    }

    public void SignalingVolumeChange(float requiredVolume, float _speedVolumeChange)
    {
        if (coroutine != null) StopCoroutine(coroutine);
        coroutine = StartCoroutine(ChangeVolume(requiredVolume, _speedVolumeChange));
    }
    private IEnumerator ChangeVolume(float requiredVolume, float _speedVolumeChange)
    {
        while (_audioSource.volume != requiredVolume)
        {
            yield return new WaitForEndOfFrame();
            _audioSource.volume = Mathf.MoveTowards(_audioSource.volume, requiredVolume, _speedVolumeChange * Time.deltaTime);
        }

        coroutine = null;
    }
}
