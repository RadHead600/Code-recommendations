using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public class Signaling : MonoBehaviour
{
    private AudioManager _audioManager;
    private bool _isPlayerInHouse;

    private void Start()
    {
        _audioManager = FindObjectOfType<AudioManager>();

        if (_audioManager == null)
        {
            Debug.LogError("AudioManager not found in the scene! Make sure it's present.");
        }
    }

    private void OnTriggerEnter2D(Collider2D collision)
    {
        PlayerController playerController = collision.GetComponent<PlayerController>();
        if (playerController != null)
        {
            _isPlayerInHouse = true;
            UpdateSignalingVolume();
        }
    }

    private void OnTriggerExit2D(Collider2D collision)
    {
        PlayerController playerController = collision.GetComponent<PlayerController>();
        if (playerController != null)
        {
            _isPlayerInHouse = false;
            UpdateSignalingVolume();
        }
    }

    private void UpdateSignalingVolume()
    {
        if (_audioManager != null)
        {
            if (_isPlayerInHouse)
                _audioManager.SignalingVolumeChange(_audioManager.MaxVolume, _audioManager.SpeedVolumeChange);
            else
                _audioManager.SignalingVolumeChange(_audioManager.MinVolume, _audioManager.SpeedVolumeChange);
        }
    }
}
