using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public class Signaling : MonoBehaviour
{
    [SerializeField] private float _speedVolumeChange;

    [SerializeField] private AudioManager _audioManager;

    private const float _maxVolume = 0.2f;
    private const float _minVolume = 0f;

    private bool _isPlayerInHouse;
    public bool isPlayerInHouse
    {
        get
        {
            return _isPlayerInHouse;
        }
        set
        {
            _isPlayerInHouse = value;

            if (_isPlayerInHouse)
                _audioManager.SignalingVolumeChange(_maxVolume, _speedVolumeChange);
            else
                _audioManager.SignalingVolumeChange(_minVolume, _speedVolumeChange);
        }
    }

    private void OnTriggerEnter2D(Collider2D collision)
    {
        PlayerController playerController = collision.GetComponent<PlayerController>();

        if (playerController != null)
            isPlayerInHouse = true;
    }

    private void OnTriggerExit2D(Collider2D collision)
    {
        PlayerController playerController = collision.GetComponent<PlayerController>();

        if (playerController != null)
            isPlayerInHouse = false;
    }
}
